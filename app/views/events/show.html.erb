<div style ="position:relative; left: -200px; margin: auto;width: 4px;height:300px; width: 500px; top: 25px; background:white;border:20px solid white">
  <div style ="position:relative; left:150px">
    <a href="#"><img src="http://placehold.it/300x240&text=[img]"/></a>
  </div>
  <div style ="position:relative; left:25px; top:-225px">
    <h3>
      <%="Event"%>
    </h3>
      <div>
        <%=@event.name.split.map(&:capitalize)*' '%>
      </div>
    <h4>
      <%="Location"%>
    </h4>
      <div>
        <%=@event.location.split.map(&:capitalize)*' '%>
      </div>
    <div>
      <%=@event.date.strftime("%m/%d/%Y")%>
    </div>
    <div>
      <%=@event.time.strftime("%I:%M%p")%>
    </div>
  </div>
</div>

