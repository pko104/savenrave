<!DOCTYPE html>
<html>
<head>
  <title>SavenRave </title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

      <nav class="top-bar" data-topbar>
        <ul class="title-area">

          <li class="name">
            <h1>
              <a href="#">
                Save N Rave
              </a>
            </h1>
          </li>
          <li class="toggle-topbar menu-icon"><a href="#"><span>menu</span></a></li>
        </ul>

        <section class="top-bar-section">

          <ul class="right">
            <li class="divider"></li>
            <li class="has-dropdown">
              <a href="#">Tickets</a>
              <ul class="dropdown">
                <li><label>Selling</label></li>
                <li><a href="#" data-reveal-id="myModal">Sell A Ticket</a></li>
                <li><a href="#">My Tickets</a></li>
                <li class="divider"></li>
                <li><label>Buying</label></li>
                <li><a href="#">Current Bids</a></li>
                <li><a href="#">Purchase History</a></li>
                <li><a href="#">Wishlist</a></li>
              </ul>
            </li>
            <li class="divider"></li>
            <li class="has-dropdown">
              <a href="#">Events</a>
              <ul class="dropdown">
                <li><a href="#">Near Me</a></li>
                <li><a href="#">Festivals</a></li>
                <li><a href="#">Electro House</a></li>
                <li><a href="#">Deep House</a></li>
                <li><a href="#">Tropical House</a></li>
                <li><a href="#">Trance</a></li>
                <li><a href="#">Future House</a></li>
                <li><a href="#">Chill</a></li>
                <li><a href="#">Dubstep</a></li>
                <li><a href="#">Others</a></li>
              </ul>
            </li>
            <li class="divider"></li>
            <li class="has-dropdown">
              <a href="#">My Profile</a>
              <ul class="dropdown">
                <li><a href="#">Summary</a></li>
                <li><a href="#">Edit Profile</a></li>
              </ul>
            </li>
          </ul>
        </section>
      </nav>

  <div id="myModal" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
    <h2 id="modalTitle">Awesome. I have it.</h2>
    <p class="lead">Your couch.  It is mine.</p>
    <p>I'm a cool paragraph that lives inside of an even cooler modal. Wins!</p>
    <a class="close-reveal-modal" aria-label="Close">&#215;</a>
  </div>

  <script src="assets/foundation.js"></script>
  <script src="assets/foundation/foundation.reveal.js"></script>


<%= yield %>

</body>
</html>



