                <li><a href="#">Chill</a></li>
                <li><a href="#">Dubstep</a></li>
                <li><a href="#">Others</a></li>
              </ul>
            </li>
            <li class="divider"></li>
            <li class="has-dropdown">
              <a href="#">My Profile</a>
              <ul class="dropdown">
                <li><a href="#">Summary</a></li>
                <li><a href="#">Edit Profile</a></li>
              </ul>
            </li>
          </ul>
        </section>
      </nav>

  <div id="myModal" class="reveal-modal small" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
    <h2 id="modalTitle">Sell Your Ticket</h2>

                <form data-abide method="post" action="index.php">

                  <fieldset>

                     <div class="event-field">
                        <label for="event">Name of Event <small>required</small></label>
                          <input type="event" name="event" id="event">
                        <small class="error">Name is required.</small>
                      </div>

                      <div class="loc-field">
                        <label for="location">Location <small>required</small></label>
                          <input type="location" name="location" id="location" required>
                        <small class="error">A location is required.</small>
                      </div>

                      <div class="time-field">
                        <label for="time">Event Time</label>
                          <input type="time" name="time" id="time">
                      </div>

                      <div class="date-field">
                        <label for="date">Event Date</label>
                          <input type="date" name="date" id="date">
                      </div>

                      <button type="submit" value="send">Submit</button>

                  </fieldset>
                </form>

          <a class="close-reveal-modal" aria-label="Close">&#215;</a>
  </div>

  <script src="assets/foundation.js"></script>
  <script src="assets/foundation/foundation.reveal.js"></script>


<%= yield %>

</body>
</html>



